datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String        @id @default(uuid())
  name         String
  email        String?       @unique
  telp         String?
  password     String       
  token        String? 
  points       Int           @default(0)
  company      Company?
  transactions Transaction[]
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
}

model Company {
  id          String @id @default(uuid())
  userId      String @unique
  companyCode String
  companyName String
  user        User   @relation(fields: [userId], references: [id])
}

model Voucher {
  id        String   @id @default(uuid())
  code      String   @unique
  discount  Float
  createdAt DateTime @default(now())
}

model Transaction {
  id            String   @id @default(uuid())
  userId        String
  totalPrice    Float
  discountValue Float
  pointsEarned  Float
  finalPrice    Float
  createdAt     DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}
